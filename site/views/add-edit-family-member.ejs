<%- include('common/header',{page: "family"}) -%>
<div class="container">
    <h1 id="title">
        <% if (typeof familyMember === 'undefined') { %>Add
        <% } else { %> Edit
        <% } %>
        Family Member</h1>
    <form method="POST">
        <input type="hidden" name="_id" id="_id"
               value="<%= (typeof familyMember === 'undefined') ? '' : familyMember._id %>"/>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name"
                   value="<%= (typeof familyMember === 'undefined') ? '' : familyMember.name %>" required>
        </div>
        <div class="mb-3">
            <label for="role" class="form-label">Role in Family</label>
            <input type="text" class="form-control" id="role" name="role"
                   value="<%= (typeof familyMember === 'undefined') ? '' : familyMember.role %>" required>
        </div>
        <div class="mb-3">
            <label for="age" class="form-label">Age</label>
            <input type="text" class="form-control" id="age" name="age"
                   value="<%= (typeof familyMember === 'undefined') ? '' : familyMember.age %>" required>
        </div>
        <input type="submit" class="btn btn-success" role="button" value="Save"/>
    </form>

</div>
<%- include('common/footer') -%>
