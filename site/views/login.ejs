<%- include('common/header',{page: "login"}) -%>
<div class="container d-flex justify-content-center align-items-center" style="height: 80vh;">
    <div class="card" style="width: 80vw; height: 30vh; margin: auto;">
        <div class="card-body d-flex flex-column align-items-center">
            <h1 class="card-title">Login</h1>
            <% if (typeof error !== 'undefined') { %>
                <div class="alert alert-danger" role="alert" style="width: 80%;">
                    Error: <%= error %>
                </div>
            <% } %>
            <form action="/login" method="POST" style="width: 80%;">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input type="password" id="password" name="password" class="form-control" required>
                </div>
                <button type="submit" class="btn basic-button mt-2">Login</button>
            </form>
            <div class="mt-3">
                <p>Don't have an account? <a href="/register">Register</a></p>
            </div>
        </div>
    </div>
</div>
<%- include('common/footer') -%>